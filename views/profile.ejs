<!-- views/profile.ejs -->
<!doctype html>
<html>
<head>
    <title>It's a match!</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <style>
        body 		{ padding-top:80px; word-wrap:break-word; }
    </style>
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1>Profile Page</h1>
        <img alt="logo" height="100" src="/images/heart.jpg" >
        <br> <br>

        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>
    <div class="col-sm-6 col-sm-offset-3">

        <h1>Analyze your dating profile!</h1>

        <!-- FORM TO ANALYZE DATING PROFILE-->
        <form action="/profile" method="post">
            <div class="form-group">
                <label>Dating Bio</label>
                <input type="text" class="form-control" name="profileBio">
            </div>
            <div class="form-group">
                <label>Profile Image URL</label>
                <input type="text" class="form-control" name="imageURL">
            </div>

            <button type="submit">Analyze!</button>
        </form>

        <hr>

    </div>
    <div class="col-sm-6 col-sm-offset-3">
        <h1>results</h1>
        <p>
            <strong>sentiment</strong>: <%= sentiment %><br>
            <strong>tags</strong>:<%= tags %><br>
        </p>
    </div>
    <div class="row">

        <!-- LOCAL INFORMATION -->
        <div class="col-sm-6">
            <div class="well">
                <h3><span class="fa fa-user"></span> Local</h3>

                <p>
                    <strong>id</strong>: <%= user._id %><br>
                    <strong>email</strong>: <%= user.local.username %><br>
                    <strong>password</strong>: <%= user.local.password %>
                </p>

            </div>
        </div>

        <!-- FACEBOOK INFORMATION -->
        <div class="col-sm-6">
            <div class="well">
                <h3 class="text-primary"><span class="fa fa-facebook"></span> Facebook</h3>

                <p>
                    <strong>id</strong>: <%= user.facebook.id %><br>
                    <strong>token</strong>: <%= user.facebook.token %><br>
                    <strong>email</strong>: <%= user.facebook.email %><br>
                    <strong>name</strong>: <%= user.facebook.name %>
                </p>

            </div>
        </div>

    </div>

</div>
</body>
</html>